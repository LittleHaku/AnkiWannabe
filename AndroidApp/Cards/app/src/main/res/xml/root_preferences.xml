<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/decks_header">
        <EditTextPreference
            app:key="max_number_cards"
            app:title="@string/max_number_cards"
            app:summary="@string/click_to_change"
            app:defaultValue="20" />
        <SwitchPreferenceCompat
            app:key="show_answers"
            app:summaryOff="@string/answers_off"
            app:summaryOn="@string/answers_on"
            app:title="@string/answers_settings_title" />
    </PreferenceCategory>
</PreferenceScreen>